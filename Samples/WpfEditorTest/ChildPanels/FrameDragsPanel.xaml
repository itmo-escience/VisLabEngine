<Grid x:Name="userControl" x:Class="WpfEditorTest.Utility.FrameDragsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfEditorTest.Utility"
             mc:Ignorable="d"
             d:DesignHeight="100.55" d:DesignWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Visible">
    <Grid.RowDefinitions>
        <RowDefinition Height="9"/>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="9"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="9"/>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="9"/>
    </Grid.ColumnDefinitions>
    <Border Name="LeftBorder" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="2,0,0,0" BorderBrush="White"/>
    <Border Name="TopBorder" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="0,2,0,0" BorderBrush="White"/>
    <Border Name="RightBorder" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="0,0,2,0" BorderBrush="White"/>
    <Border Name="BottomBorder" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="0,0,0,2" BorderBrush="White"/>
    <Border Name="PositionInfo" BorderThickness="0,0,0,1" BorderBrush="White" Grid.Column="0" Height="28" Grid.Row="0" Width="53" Margin="-53,-27,9,8">
        <StackPanel>
            <DockPanel>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="X:" HorizontalAlignment="Left"></TextBlock>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="{Binding RenderTransform.Value.OffsetX, ElementName=userControl, StringFormat=###0.00}" Width="40" HorizontalAlignment="Left"></TextBlock>

            </DockPanel>
            <DockPanel>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="Y:" HorizontalAlignment="Left"></TextBlock>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="{Binding RenderTransform.Value.OffsetY, ElementName=userControl, StringFormat=###0.00}" Width="40" HorizontalAlignment="Left"></TextBlock>
            </DockPanel>
        </StackPanel>
    </Border>
    <Border Name="SizeInfo" BorderThickness="0,1,0,0" BorderBrush="White" Grid.Column="2" Height="28" Grid.Row="2"
                Width="53" Margin="9,8,-53,-27">
        <StackPanel>
            <DockPanel>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="W:" HorizontalAlignment="Left"></TextBlock>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="{Binding Width, ElementName=userControl, StringFormat=###0.00}" Width="40" HorizontalAlignment="Left"></TextBlock>
            </DockPanel>
            <DockPanel>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="H:" HorizontalAlignment="Left"></TextBlock>
                <TextBlock Foreground="White" FontFamily="Consolas" FontSize="12" Text="{Binding Height, ElementName=userControl, StringFormat=###0.00}" Width="40" HorizontalAlignment="Left"></TextBlock>
            </DockPanel>
        </StackPanel>
    </Border>

    <Border Name="BottomDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Center" Tag="Bottom"
                Height="9" Grid.Row="2" Width="20" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeNS" MouseRightButtonDown="Drag_MouseRightButtonDown" RenderTransformOrigin="0.5,1"/>
    <Border Name="TopDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Center" Tag="Top"
                Height="9" Grid.Row="0" Width="20" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeNS" MouseRightButtonDown="Drag_MouseRightButtonDown" RenderTransformOrigin="0.5,0"/>
    <Border Name="LeftDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="0" Height="20" Grid.Row="1" Tag="Left"
                VerticalAlignment="Center" Width="9" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeWE" MouseRightButtonDown="Drag_MouseRightButtonDown" RenderTransformOrigin="0,0.5"/>
    <Border Name="RightDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="2" Height="20" Grid.Row="1" Tag="Right"
                VerticalAlignment="Center" Width="9" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeWE" MouseRightButtonDown="Drag_MouseRightButtonDown" RenderTransformOrigin="1,0.5"/>

    <Border Name="BottomLeftDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="0" Height="9" Grid.Row="2"
                Width="9" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeNESW" RenderTransformOrigin="0,1"/>
    <Border Name="BottomRightDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="2" Height="9" Grid.Row="2"
                Width="9" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeNWSE" RenderTransformOrigin="1,1"/>
    <Border Name="TopLeftDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="0" Height="9" Grid.Row="0"
                Width="9" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeNWSE" RenderTransformOrigin="0,0"/>
    <Border Name="TopRightDrag" BorderBrush="Black" Background="White" BorderThickness="1" Grid.Column="2" Height="9" Grid.Row="0"
                Width="9" MouseLeftButtonDown="Drag_MouseLeftButtonDown" Cursor="SizeNESW" RenderTransformOrigin="1,0"/>
</Grid>
