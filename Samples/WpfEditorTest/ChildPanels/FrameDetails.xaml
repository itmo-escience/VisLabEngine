			                             VerticalAlignment = "Center"
                                            FontFamily="Times New Roman"
                                      Text="{Binding PropName}"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="Gray" Background="Green" MinHeight="32" Width="auto" HorizontalAlignment="Stretch" DataContext="{Binding Prop}">
