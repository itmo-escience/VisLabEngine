<UserControl x:Class="WpfEditorTest.ChildPanels.ParentHighlightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEditorTest.ChildPanels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="White" BorderThickness="2">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="50,20" MappingMode="Absolute" StartPoint="50,0" SpreadMethod="Repeat" Opacity="0.3">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform AngleY="-45" CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFEEFF45"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>

    </Grid>
</UserControl>
